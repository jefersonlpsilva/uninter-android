<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SegundaActivity" android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_vertical_margin" android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin">

    <RadioButton
            android:text="Opção 1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rbOpcao1" android:layout_alignParentTop="true"
            android:layout_marginTop="23dp" android:layout_centerHorizontal="true"/>
    <RadioButton
            android:text="Opção 2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rbOpcao2"
            android:layout_marginTop="83dp" android:layout_alignParentTop="true" android:layout_below="@id/rbOpcao1"
            android:layout_centerHorizontal="true"/>
    <RadioButton
            android:text="Opção 3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/rbOpcao3" android:layout_marginTop="53dp"
            android:layout_centerHorizontal="true" android:layout_below="@id/rbOpcao2"/>
</RelativeLayout>